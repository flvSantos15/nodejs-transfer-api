generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String
  Account  Account[]
}

model Account {
  id      String @id @default(cuid())
  name    String
  userId  String
  balance Float  @default(0)

  user User @relation(fields: [userId], references: [id])
}
